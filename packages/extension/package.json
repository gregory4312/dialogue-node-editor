{
  "name": "bedrock-dialogue-node-editor",
  "version": "0.3.0",
  "private": true,
  "author": "Aevarkan",
  "license": "GPL-3.0-only",
  "displayName": "%bedrockDialogueEditor.displayName%",
  "type": "commonjs",
  "scripts": {
    "copy-media": "node scripts/copy-app-media-files.cjs",
    "copy-info-files": "node scripts/copy-info-files.cjs",
    "compile": "tsdown",
    "build": "pnpm run copy-media && pnpm run compile",
    "package": "pnpm run copy-info-files && vsce package -o bedrock-dialogue-node-editor.vsix",
    "deploy-marketplace": "vsce publish"
  },
  "publisher": "aevarkan",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aevarkan/dialogue-node-editor"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onLanguage:json"
  ],
  "icon": "./icon.png",
  "contributes": {
    "commands": [
      {
        "command": "bedrockDialogueEditor.openNodeEditor",
        "title": "%bedrockDialogueEditor.openNodeEditor%",
        "category": "%bedrockDialogueEditor.category%"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "bedrockDialogueEditor.openNodeEditor",
          "when": "editorLangId == json"
        }
      ]
    },
    "configuration": {
      "title": "%bedrockDialogueEditor.name%",
      "properties": {
        "bedrockDialogueEditor.autoOpen": {
          "title": "%bedrockDialogueEditor.autoOpen.title%",
          "description": "%bedrockDialogueEditor.autoOpen.desc%",
          "type": "boolean",
          "default": false
        },
        "bedrockDialogueEditor.switchFocusOnOpen": {
          "title": "%bedrockDialogueEditor.switchFocusOnOpen.title%",
          "markdownDescription": "%bedrockDialogueEditor.switchFocusOnOpen.desc%",
          "type": "boolean",
          "default": true
        },
        "bedrockDialogueEditor.editorOpenLocation": {
          "title": "%bedrockDialogueEditor.editorOpenLocation.title%",
          "markdownDescription": "%bedrockDialogueEditor.editorOpenLocation.desc%",
          "type": "string",
          "enum": ["active", "beside"],
          "markdownEnumDescriptions": [
            "%bedrockDialogueEditor.editorOpenLocation.active.desc%",
            "%bedrockDialogueEditor.editorOpenLocation.beside.desc%"
          ],
          "default": "beside"
        },
        "bedrockDialogueEditor.nodeColors": {
          "title": "%bedrockDialogueEditor.nodeColors.title%",
          "markdownDescription": "%bedrockDialogueEditor.nodeColors.desc%",
          "type": "object",
          "default": {
            "scene": "#268bb3",
            "button": "#9b68b4",
            "command": "#429740",
            "sceneDark": "#263b53",
            "buttonDark": "#4b2568",
            "commandDark": "#265525"
          },
          "properties": {
            "scene": {
              "type": "string",
              "title": "%bedrockDialogueEditor.nodeColors.scene.title%",
              "description": "%bedrockDialogueEditor.nodeColors.scene.desc%",
              "format": "color-hex",
              "default": "#268bb3"
            },
            "button": {
              "type": "string",
              "title": "%bedrockDialogueEditor.nodeColors.button.title%",
              "description": "%bedrockDialogueEditor.nodeColors.button.desc%",
              "format": "color-hex",
              "default": "#9b68b4"
            },
            "command": {
              "type": "string",
              "title": "%bedrockDialogueEditor.nodeColors.command.title%",
              "description": "%bedrockDialogueEditor.nodeColors.command.desc%",
              "format": "color-hex",
              "default": "#429740"
            },
            "sceneDark": {
              "type": "string",
              "title": "%bedrockDialogueEditor.nodeColors.sceneDark.title%",
              "description": "%bedrockDialogueEditor.nodeColors.sceneDark.desc%",
              "format": "color-hex",
              "default": "#263b53"
            },
            "buttonDark": {
              "type": "string",
              "title": "%bedrockDialogueEditor.nodeColors.buttonDark.title%",
              "description": "%bedrockDialogueEditor.nodeColors.buttonDark.desc%",
              "format": "color-hex",
              "default": "#4b2568"
            },
            "commandDark": {
              "type": "string",
              "title": "%bedrockDialogueEditor.nodeColors.commandDark.title%",
              "description": "%bedrockDialogueEditor.nodeColors.commandDark.desc%",
              "format": "color-hex",
              "default": "#265525"
            }
          },
          "required": ["scene", "button", "command", "sceneDark", "buttonDark", "commandDark"],
          "additionalProperties": false
        }
      }
    },
    "customEditors": [
      {
        "viewType": "bedrockDialogueEditor.nodeEditor",
        "displayName": "%bedrockDialogueEditor.nodeEditor.displayName%",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ]
      }
    ]
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "devDependencies": {
    "@vscode/vsce": "^3.7.0",
    "@workspace/common": "workspace:*",
    "tsdown": "^0.16.1"
  }
}