{
  "name": "bedrock-visual-dialogue-editor",
  "version": "0.0.1",
  "private": true,
  "author": "Aevarkan",
  "license": "GPL-3.0-only",
  "displayName": "Bedrock Visual Dialogue Editor",
  "type": "commonjs",
  "scripts": {
    "copy-media": "node scripts/copy-app-media-files.cjs",
    "compile": "tsdown",
    "build": "pnpm run copy-media && pnpm run compile",
    "package": "vsce package -o bedrock-visual-dialogue-editor.vsix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aevarkan/dialogue-graph"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "Bedrock Dialogue Editor",
      "properties": {
        "bedrockDialogueEditor.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open dialogue files in the visual editor."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "bedrockDialogueEditor.graphEditor",
        "displayName": "Graph Editor",
        "selector": [
          {
            "filenamePattern": "*.json",
            "language": "json"
          }
        ]
      }
    ]
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "devDependencies": {
    "@vscode/vsce": "^3.7.0",
    "@workspace/common": "workspace:*",
    "tsdown": "^0.16.1"
  }
}