{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NPC Dialogue (Strict Schema)",
  "type": "object",
  "properties": {
    "format_version": {
      "type": "string"
    },
    "minecraft:npc_dialogue": {
      "type": "object",
      "properties": {
        "scenes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "scene_tag": {
                "type": "string"
              },
              "npc_name": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "$ref": "#/definitions/rawtext"
                  }
                ]
              },
              "text": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "$ref": "#/definitions/rawtext"
                  }
                ]
              },
              "on_open_commands": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "on_close_commands": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "buttons": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "oneOf": [
                        {
                          "type": "string"
                        },
                        {
                          "$ref": "#/definitions/rawtext"
                        }
                      ]
                    },
                    "commands": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": ["name", "commands"]
                }
              }
            },
            "required": ["scene_tag"]
          }
        }
      }
    }
  },
  "required": [
    "format_version",
    "minecraft:npc_dialogue"
  ],
  "additionalProperties": false,
  "definitions": {
    "rawtext": {
      "type": "object",
      "properties": {
        "rawtext": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "translate": {
                "type": "string"
              },
              "with": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["translate"]
          }
        }
      },
      "required": ["rawtext"]
    }
  }
}
